/* components/progress-bar/progress-bar.wxss */

.progress{
  display: flex;
  align-items: center;
}

.movable{
  position: relative;
  flex: 1;
}

.movable-area{
 width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -14rpx;
  left: 0;
  
 
}
.startTime,.endTime{
  color:#fff;
  width: 64rpx;
  padding:0 20rpx;
  font-size: 24rpx;
  font-family: NotoSansHans-Regular;
  font-weight: 400;
  line-height: 30rpx;

}
.movable-view{

  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #fff;
  
}